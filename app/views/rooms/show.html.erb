<tr>
 <%= image_tag @room.room_img_url.to_s %>
 <p><%= @room.name %></p>
 <p><%= @room.adress %></p>
</tr>

<tr>
 <p><%= @room.introduction %></p>
</tr>


<%= form_with model: @book, url:new_reservation_path, method: :get do |f| %>

    <%= f.hidden_field:room_id, value:@room.id %>
    <%= f.hidden_field:member_id, value:current_member.id %>

<p>¥<%= @room.price %>/日</p>

<%= f.label :start_at ,"開始日" %>
<%= f.date_field :start_at %>
  
<%= f.label :end_at ,"終了日" %>
<%= f.date_field :end_at %>

<%= f.label :number ,"人数" %>
<%= f.number_field :number %>


 <%= f.submit "予約する"  %>
<% end %>