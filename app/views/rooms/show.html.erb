<table class= "table">
 <tr>
  <td><%= image_tag @room.room_img_url.to_s %></td>
 </tr>

 <tr>
  <td><%= @room.name %></td>
 </td>
 
 <tr>
  <td><%= @room.adress %></td>
 </tr>

 <tr>
  <td><%= @room.introduction %></td>
 </tr>
</table>

 <%= form_with model: @reservation, url:new_reservation_path, method: :get do |f| %>

  <%= f.hidden_field:room_id, value:@room.id %>
  <%= f.hidden_field:member_id, value:current_member.id %>

   <p>¥<%= @room.price %>/日</p>

    <%= f.label :start_at ,"開始日" %>
    <%= f.date_field :start_at %><br>
  
    <%= f.label :end_at ,"終了日" %>
    <%= f.date_field :end_at %><br>

    <%= f.label :number ,"人数" %>
    <%= f.number_field :number %><br>

     <button class= "button is-info">予約する</button>

 <% end %>
