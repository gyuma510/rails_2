<section class="hero is-fullheight" style="background-image: url('https://presite-potepancamp-rails-02.herokuapp.com/assets/img_cover_top.jpg')" >
  <div class="hero-body">
    <div class="box">
      <h1 class="title">
      Potepan Shareでまだ体験したことのない旅をしよう
      </h1>
      <%= search_form_for @q,url:search_rooms_path do |f| %>
  <%= f.label :adress_cont, 'エリア' %>
   <br>
    <%= f.search_field :adress_cont, placeholder:'東京' %><br>
   <button class="button is-info">探す</button>
 <% end %>
    </div>
  </div>
</section>
 
  
    <h2 class= "subtitle">おすすめのエリア</h2>
    <div class="tile is-ancestor">
     <div class="tile is-parent">
      <article class="tile is-child box">
     <span class="subtitle">東京</span>
      <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_tokyo.jpg"), search_rooms_path(q:{adress_cont: "東京"}) %>
      </article>
      <article class="tile is-child box">
      <span class="subtitle">大阪</span>
      <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_osaka.jpg"), search_rooms_path(q:{adress_cont: "大阪"}) %>
      </article>
      <article class="tile is-child box">
     <span class="subtitle">京都</span>
      <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_kyoto.jpg"), search_rooms_path(q:{adress_cont: "京都"}) %>
      </article>
      <article class="tile is-child box">
     <span class="subtitle">札幌</span>
      <%= link_to image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_sapporo.jpg"), search_rooms_path(q:{adress_cont: "札幌"}) %>
      </article>
      </div>
     </div>
