<h2 ="title">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email,:placeholder => "メールアドレス", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password,:placeholder => "パスワード", autocomplete: "current-password" %>
  </div>

  <div class="actions">
  <button class="button is-info">ログイン</button>
  </div>
<% end %>

<%= link_to "新しいアカウントを作成", new_registration_path(resource_name) %><br />